<h1>Burger Time!</h1>

<h2>Enter a burger of your desire and click "Add":</h2>

<div class="row">
  <form action="/burgers" method="POST">
    <input type="text" id="name" name="burger_name" placeholder="ADD A NEW BURGER TO EAT">
    <button type="submit" class="addBurgerButton">Add</button>
  </form>
</div>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        <h2>Le Burgers Available</h2>

        {{#each burgers}} {{#unless this.devoured}}

        <div>
          <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
            <div class='burgerAvailable'>
              {{this.id}}. {{this.burger_name}}
              <button type="submit" class="devour">DEVOUR IT!</button>
            </div>
          </form>
        </div>
        {{/unless}} {{/each}}
      </div>

      <div class="col s6">
        <h2> Le Burgers Eaten</h2>
        {{#each burgers}} {{#if this.devoured}}
        <div class='burgerEaten'>
          <div>
            {{this.id}}. {{this.burger_name}}
          </div>
        </div>
        {{/if}} {{/each}}
      </div>
    </div>
  </div>
</main>